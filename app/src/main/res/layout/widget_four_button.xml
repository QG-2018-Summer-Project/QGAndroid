<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6a7aa">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iv_setting"
        android:padding="4dp"
        android:src="@drawable/icon_setting"
        android:background="@drawable/white_circle_shape"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iv_route"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_route"
        android:background="@drawable/white_circle_shape"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iv_change"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_change"
        android:background="@drawable/white_circle_shape"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iv_aim"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_aim"
        android:background="@drawable/white_circle_shape"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_url"/>
</LinearLayout>