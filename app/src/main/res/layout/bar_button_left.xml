<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_count"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/white_circle_shape"
        android:padding="6dp"
        android:src="@drawable/icon_car" />

    <ImageView
        android:id="@+id/iv_demand"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_circle_shape"
        android:padding="7dp"
        android:src="@drawable/icon_demand" />

    <ImageView
        android:id="@+id/iv_period"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_circle_shape"
        android:padding="6dp"
        android:src="@drawable/icon_time" />

    <ImageView
        android:id="@+id/iv_shot"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_circle_shape"
        android:padding="6dp"
        android:src="@drawable/icon_shot" />

</LinearLayout>