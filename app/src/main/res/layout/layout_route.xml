<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_route"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_above="@id/link"
            android:src="@drawable/icon_point" />

        <ImageView
            android:id="@+id/link"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icon_link" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/link"
            android:src="@drawable/icon_point" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/iv_route_reverse"
            android:layout_toEndOf="@id/link"
            android:background="#DEDEDE" />

        <TextView
            android:id="@+id/tv_route_start"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_above="@id/divider"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/link"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="输入起点"
            android:maxLines="1"
            android:text="我的位置"
            android:textColor="#1F1F1F"
            android:textColorHint="#8A8A8A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_route_end"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/divider"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/link"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="输入终点"
            android:maxLines="1"
            android:textColor="#1F1F1F"
            android:textColorHint="#8A8A8A"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_route_reverse"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_reverse" />

    </RelativeLayout>

</android.support.v7.widget.CardView>